{
    // VS Code will follow the symlink .vscode -> .workspace/.vscode
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Architecture Status",
            "type": "shell",
            "command": "./Tools/Automation/master_automation.sh",
            "args": [
                "status"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "List Projects",
            "type": "shell",
            "command": "./Tools/Automation/master_automation.sh",
            "args": [
                "list"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Master Automation",
            "type": "shell",
            "command": "./Tools/Automation/master_automation.sh",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Agents: Supervisor Watch (1m)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd Tools/Automation/agents && chmod +x ./monitor_agents.sh ./watch_supervisor.sh && ./watch_supervisor.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "group": "build",
            "problemMatcher": []
        }
    ]
}